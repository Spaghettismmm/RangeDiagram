<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dlsize_activity"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <ScrollView
            android:id="@+id/dlsize_container_scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="4dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:useDefaultMargins="true"
                android:alignmentMode="alignBounds"
                android:id="@+id/dlsize_GridLayout"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:orientation="vertical">
                <TextView
                    android:text="DL Reach"
                    android:layout_gravity="start"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DLreach"
                    android:hint="@string/DLreach"
                    android:layout_gravity="end"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:inputType="number"
                    />
                <TextView
                    android:text="Tub Width"
                    android:layout_gravity="start"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TubW"
                    android:hint="@string/TubW"
                    android:layout_gravity="end"
                    android:layout_column="2"
                    android:layout_row="6"
                    android:inputType="number"
                    />

                <TextView
                    android:text="Dump Height"
                    android:layout_gravity="start"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DumpHView"
                    android:hint="@string/DumpHView"
                    android:layout_gravity="end"
                    android:layout_column="2"
                    android:layout_row="7"
                    android:inputType="number"
                    />

                <TextView
                    android:text="Dig Depth"
                    android:layout_gravity="start"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DigDView"
                    android:hint="@string/DigDView"
                    android:layout_gravity="end"
                    android:layout_column="2"
                    android:layout_row="8"
                    android:inputType="number"
                    />


            </GridLayout>
        </ScrollView>
    <Button
        android:id="@+id/dlsize_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:orientation="vertical"
        android:onClick="DLDim_onClick"
        android:elevation="4dp"/>
</LinearLayout>